<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <!-- UX: There's too much blank space on the top. Maybe we could toggle this somehow, or maybe is just useless for this purpose. -->
    
        <t
        t-name="AutoMeasure.DetailControlPanel"
        t-inherit="web.ControlPanel"
        t-inherit-mode="primary"
        owl="1"
    >   
        <xpath expr="//t[@t-call='web.ControlPanel.Regular']" position="replace">
            <t t-call="AutoMeasure.DetailControlPanel.Regular"/>
        </xpath>
    </t>
    
    <t
        t-name="AutoMeasure.DetailControlPanel.Regular"
        t-inherit="web.ControlPanel.Regular"
        t-inherit-mode="primary"
        owl="1"
    >
        <!-- <xpath expr="//div[hasclass('o_cp_bottom')]" position="attributes">
            <attribute name="t-if">True</attribute>
        </xpath> -->
        <xpath expr="//div[hasclass('o_cp_top_right')]" position="replace">
            <div>

            </div>
        </xpath>
        <xpath expr="//div[hasclass('o_cp_bottom')]" position="replace">
            <div class="d-flex justify-content-center " >
                <div class="w-25 d-flex justify-content-between align-items-center">
                    <div>
                        <span class="h1 font-weight-bold"><t t-esc="state.measure_amount"/> </span>
                        <span ><t t-esc="uom_display_name.toUpperCase()"></t></span>
                    </div>
                    <!-- <i t-att-class="'fa fa-circle ' + (circleColor === 'red' ? 'text-danger' : 'text-success')"
                    style="margin-left: 10px;"></i> -->
                    <div  class="w-75 d-flex">
                        <span
                            t-att-class="'badge  w-100 fs-4 p-2 ' + (state.weighing_status == weighing_statuses.free ? 'text-bg-success' : (state.weighing_status == weighing_statuses.unstable ? 'text-bg-warning': 'text-bg-danger'))"
                        ><t t-esc="state.weighing_status"></t></span>
                        <div class="ms-2">
                            <!-- intento de que aparezca el icono si falla la conexión con la báscula -->
                        <!-- <i t-if="!is_connected" class="fa fa-plug text-danger fs-1"></i> -->

                        </div>
                    </div>
                </div>

            </div>
        </xpath>
    </t>

</templates>
