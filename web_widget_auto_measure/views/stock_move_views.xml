<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_move_weight_kanban_view" model="ir.ui.view">
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock_weighing.view_move_weight_kanban_view"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//t[@t-if='record.recorded_weight.raw_value']" position="after"> -->
            <xpath expr="//div[@class='text-center']" position="after">
                <div class="text-center">
                    <span class="h1 text-success me-2">
                        <field name="auto_weight" widget="auto_measure"/>
                    </span>
                 </div>
            </xpath>
        </field>
    </record>

</odoo>
