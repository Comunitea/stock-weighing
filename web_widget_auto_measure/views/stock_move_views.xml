<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_move_weight_kanban_view_auto" model="ir.ui.view">
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock_weighing.view_move_weight_kanban_view"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
             <field name="date" position="after">
                <field name="mode_auto_weighing" />
            </field>
            <!-- <xpath expr="//t[@t-if='record.recorded_weight.raw_value']" position="after"> -->
            <xpath expr="//div[@class='text-center']" position="after">
                <div class="text-center">
                    <span>
                        <field name="mode_auto_weighing" widget="boolean_toggle"/>
                    </span>
                 </div>
                <div class="text-center">
                    <span class="h1 text-success me-2">
                        <field name="auto_weight" widget="auto_measure" attrs="{'invisible': [('mode_auto_weighing', '=', False)]}"/>
                        <!-- <field name="auto_weight" widget="auto_measure"/> -->
                    </span>
                 </div>
            </xpath>
        </field>
    </record>

    <!-- This is meant to be used in a split view if we get to do that instead of the wizard approach -->
    <record id="stock_move_weight_form_view_auto" model="ir.ui.view">
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <form class="p-0" create="0" edit="0" js_class="base_weight_record_form">
                <field name="company_id" invisible="1" />
                <!-- HACK: Use the same kanban in the form view with a computed field on itself so we can reuse it -->
                <field
                    name="self_move_ids"
                    mode="kanban"
                    class="w-100"
                    context="{'kanban_view_ref': 'web_widget_auto_measure.view_move_weight_kanban_view_auto', 'hide_weight_detail_buttons': True}"
                />
                <field
                    name="move_line_ids"
                    mode="kanban"
                    class="w-100"
                    context="{'kanban_view_ref': 'stock_weighing.stock_move_line_weight_kanban_view'}"
                />
            </form>
        </field>
    </record>

    <!-- Default action -->
    <record id="weighing_operation_action_auto" model="ir.actions.act_window">
        <field name="res_model">stock.move</field>
        <field name="name">Weighing operations</field>
        <field name="view_mode">kanban,form</field>
        <field
            name="context"
        >{'search_default_ready': 1, 'search_default_date_today': 1, 'search_default_to_weigh': 1, 'outgoing_weighing_order': 1}</field>
        <field name="domain">[('has_weight', '=', True)]</field>
        <field
            name="view_ids"
            eval="[(5, 0, 0),(0, 0, {'view_mode': 'kanban', 'view_id': ref('view_move_weight_kanban_view_auto')}),(0, 0, {'view_mode': 'form', 'view_id': ref('stock_move_weight_form_view_auto')})]"
        />
        <field name="search_view_id" ref="stock_weighing.view_move_search" />
    </record>
    
    <!-- Todo quitar -->
    <record id="view_move_add_auto_measure" model="ir.ui.view">
        <field name="name">stock.picking.view.move.add.auto.measure</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
                <field
                    name="mode_auto_weighing" optional="hide" />
            </xpath>
            
        </field>
    </record>



</odoo>
