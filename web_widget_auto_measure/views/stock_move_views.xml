<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_move_weight_kanban_view" model="ir.ui.view">
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock_weighing.view_move_weight_kanban_view"/>
        <field name="arch" type="xml">
             <field name="date" position="after">
                <field name="mode_auto_weighing" />
            </field>
            <!-- <xpath expr="//t[@t-if='record.recorded_weight.raw_value']" position="after"> -->
            <xpath expr="//div[@class='text-center']" position="after">
                <div class="text-center">
                    <span>
                        <field name="mode_auto_weighing" widget="boolean_toggle"/>
                    </span>
                 </div>
                <div class="text-center">
                    <span class="h1 text-success me-2">
                        <field name="auto_weight" widget="auto_measure" attrs="{'invisible': [('mode_auto_weighing', '=', False)]}"/>
                        <!-- <field name="auto_weight" widget="auto_measure"/> -->
                    </span>
                 </div>
            </xpath>
        </field>
    </record>

    <record id="view_move_add_auto_measure" model="ir.ui.view">
        <field name="name">stock.picking.view.move.add.auto.measure</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
                <field
                    name="mode_auto_weighing" optional="hide" />
            </xpath>
            
        </field>
    </record>

</odoo>
