    <!-- El equivalente de lo anterior estÃ¡ en el renderer -->
    <t 
        t-name="stock_weighing.WeightRecordingKanbanRenderer" 
        t-inherit="web.KanbanRenderer" 
        t-inherit-mode="primary" 
        owl="1"
    >
        <xpath expr="//span[hasclass('o_column_title')]" position="before">
            <span t-if="!group.folded" class="toggle_kanban_fold me-2">
                <i
                    class="fa fa-folder-open text-warning"
                    role="img"
                    aria-label="Fold"
                    title="Fold"
                    t-on-click.stop="() => this.toggleGroup(group)"
                />
            </span>
            <span t-else="">
                <i
                    class="fa fa-folder text-warning"
                    role="img"
                    aria-label="Unfold"
                    title="Unfold"
                    t-on-click.stop="() => this.toggleGroup(group)"
                />
            </span>
            <button
                t-if="group.show_weighing_print_button"
                class="btn btn-lg btn-secondary me-2 column_print_labels"
                title="Print labels"
                t-on-click.stop="() => this.groupPrintLabels(group)"
            >
                <i class="fa fa-print" role="img" />
            </button>
        </xpath>
        <xpath expr="//t[@t-if='env.isSmall or !group.isFolded']//Dropdown" position="replace">
        </xpath>
    </t>

</templates>
