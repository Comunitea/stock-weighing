<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <!-- <t t-name="stock_weighing_remote_measure.RemoteMeasureFormOwl" t-inherit="web_widget_remote_measure.owl_measure_device_status" t-inherit-mode="primary" owl="1">

    </t> -->
    <t t-name="stock_weighing_remote_measure.RemoteMeasureFormOwl" owl="1">
        <div class="container">
            <div class="row">
                <div class="col-12 border border-dark rounded p-2 ms-0" name="display">
                    <div
                        name="tare_infos"
                        t-if="tares.length"
                        class="ms-1 me-1 text-info text-start w-100"
                    >
                        <i class="fa fa-level-down"></i> 
                        TARE: 
                        <span name="tare_amount" class="fw-bold text-danger me-1">0</span> 
                        <span t-out="this.uom.name" class="text-danger me-2"></span>
                        
    
                        <i class="fa fa-caret-square-o-right"></i> 
                        REAL: 
                        <span name="real_amount" class="fw-bold text-success me-1" t-out="amount"></span> 
                        <span t-out="this.uom.name" class="text-success"></span>
                        
                        
                        <div
                            class="d-inline float-end text-dark"
                            title="Device info"
                            name="device_selector"
                            role="button"
                        >
                            <i class="fa fa-thermometer"></i> 
                            <span t-out="remote_device_data.name"></span>
                        </div>
                    </div>

                    <!-- todo: Improve mt-4 in span button. Use flexbox and align itemns to emulate -->
                    <div name="weight_control" class="w-100">
                        <!-- <RemoteMeasureOwl t-props="remoteMeasureProps"></RemoteMeasureOwl> -->
                        <span 
                            t-if="!props.readonly" 
                            t-att-class="'btn btn-lg float-start mt-4 ' + state.buttonClass" 
                            t-on-click.prevent="toggleMeasurement">
                                <i t-att-class="'fa ' + state.icon"></i>
                        </span>
                        <input 
                            t-att-id="props.id" 
                            t-ref="numpadDecimal" 
                            autocomplete="off" 
                            t-att-placeholder="props.placeholder" 
                            t-att-type="props.inputType" 
                            inputmode="decimal" 
                            class="o_input o_input_weight text-info w-50" 
                            t-att-step="props.step" 
                        />
                    </div>
                </div>
                <t
                    t-set="colors"
                    t-value="['success', 'info', 'warning', 'danger', 'primary']"
                />
                <div class="col-12 pt-2 ps-0" name="buttons">
                    <div
                        t-foreach="tares"
                        t-as="tare"
                        t-key="tare_index"
                        class="btn-group btn-group-lg me-2 mb-2 float-start"
                    >
                        <t t-set="color" t-value="colors[tare_index % colors.length]"></t>
                        <btn
                            t-attf-class="btn btn-outline-{{color}}"
                            t-att-data-tare="tare.tare"
                        >
                            -
                        </btn>
                        <btn t-attf-class="btn btn-{{color}} disabled">
                            <t t-if="tare.name" t-out="tare.name"></t>
                            <t t-else="">
                                <t t-out="tare.tare"></t> <t t-out="this.uom.name"></t>
                            </t>
                        </btn>
                        <btn
                            t-attf-class="btn btn-outline-{{color}}"
                            t-attf-data-tare="-{{tare.tare}}"
                        >
                            +
                        </btn>
                    </div>
                </div>
                <div class="col-12 pt-2 ps-0">
                    <div name="manual_tare" class="input-group input-group-lg">
                        <span class="input-group-text text-uppercase manual_tare_label">Manual tare</span>
                        <button
                            class="fa fa-minus btn btn-primary"
                            aria-label="Minus"
                            title="Minus"
                            type="button"
                            data-mode="plus"
                        ></button>
                        <input
                            type="number"
                            step="0.1"
                            inputmode="decimal"
                            class="form-control text-center"
                            aria-label="Manual tare"
                        />
                        <button
                            class="fa fa-plus btn btn-primary"
                            aria-label="Plus"
                            title="Plus"
                            type="button"
                            data-mode="minus"
                        ></button>
                        <span class="input-group-text" t-out="this.uom.name"></span>
                    </div>
                </div>
            </div>
        </div>

    </t>

</templates>
